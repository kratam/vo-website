{
  "Main": {
    "parent_category": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["kb_category"],
        "label": "Parent category"
      }
    },
    "name": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Name"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "slug"
      }
    },
    "order": {
      "type": "Number",
      "config": {
        "label": "Order"
      }
    },
    "description": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Description",
        "placeholder": "Short description of the category"
      }
    },
    "icon": {
      "type": "Text",
      "config": {
        "label": "icon"
      }
    },
    "cover": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 400
        },
        "thumbnails": [
          {
            "name": "full",
            "width": 1200,
            "height": null
          }
        ],
        "label": "Cover"
      }
    },
    "body": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Body"
      }
    }
  }
}
